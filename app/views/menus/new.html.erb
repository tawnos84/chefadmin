<h1>Add new menu</h1>

<%= form_for :menu, url: chef_menus_path do |f| %>

    <% if @menu.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
          <%= pluralize(@menu.errors.count, "error") %> prohibited
          this menu from being saved:
          <ul>
            <% @menu.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <!--Basics-->
    <div class="page-header"><h3>Basics</h3></div>

    <div class="form-group">
      <%= f.label :'Name'  %><br>
      <%= f.text_field :name, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :'Currency' %><br>
      <%= select_tag(:currency, options_for_select([['GBP', 1], ['USD', 2], ['EUR', 3], ['PEN', 4]]), :class => 'form-control') %>
    </div>

    <div class="form-group">
      <%= f.label :'Price' %>
      <%= f.text_field :price, :class => 'form-control'  %>
    </div>

    <div class="form-group">
      <%= f.label :'description' %>
      <%= f.text_area :description, :class => 'form-control'  %>
    </div>

    <div class="page-header"><h3>Images</h3></div>
    <div class="form-group">
      <%= f.label :'photo1' %>
      <%= f.text_field :photo1, :class => 'form-control'  %>
    </div>
    <div class="form-group">
      <%= f.label :'photo2' %>
      <%= f.text_field :photo2, :class => 'form-control'  %>
    </div>
    <div class="form-group">
      <%= f.label :'photo3' %>
      <%= f.text_field :photo3, :class => 'form-control'  %>
    </div>
    <div class="form-group">
      <%= f.label :'photo4' %>
      <%= f.text_field :photo4, :class => 'form-control'  %>
    </div>
    <div class="form-group">
      <%= f.label :'photo5' %>
      <%= f.text_field :photo5, :class => 'form-control'  %>
    </div>


    <div class="page-header"><h3>Additional information</h3></div>
    <div class="form-group">
      <%= f.check_box :option_alcohol%> <%= f.label :'option_alcohol' %>
    </div>
    <div class="form-group">
      <%= f.check_box :option_change%> <%= f.label :'option_change' %>
    </div>
    <div class="form-group">
      <%= f.label :'partysize' %>
      <%= f.text_field :partysize, :class => 'form-control'  %>
    </div>
    <div class="form-group">
      <%= f.label :'hashtags' %>
      <%= f.text_field :hashtags, :class => 'form-control'  %>
    </div>

    <div class="form-group">
      <%= f.check_box :cuisine_italian%> <%= f.label :'cuisine_italian' %>
    </div>
    <div class="form-group">
      <%= f.check_box :cuisine_peruvian %> <%= f.label :'cuisine_peruvian' %>
    </div>
    <div class="form-group">
      <%= f.check_box :cuisine_mediterranean%> <%= f.label :'cuisine_mediterranean' %>
    </div>
    <div class="form-group">
      <%= f.check_box :cuisine_spanish%> <%= f.label :'cuisine_spanish' %>
    </div>
    <div class="form-group">
