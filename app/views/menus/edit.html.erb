<% if(session[:admin]) %>
    <div class="row">
      <h3><i class="fa fa-street-view"></i> Manage your menus</h3>
      <ul class="nav nav-tabs">
        <li role="presentation"><a href="<%= welcome_index_path %>"><i class="fa fa-tachometer"></i> <%=t :Dashboard %></a></li>
        <li role="presentation"><a href="<%= edit_user_path(current_user) %>"><i class="fa fa-user"></i> <%=t :AccountSettings %></a></li>
        <li role="presentation"><a href="<%= edit_chef_path(@chef) %>"><i class="fa fa-street-view"></i> <%=t :ManageYourProfile %></a></li>
        <li role="presentation" class="active"><a href="<%= chef_menus_path(@chef) %>"><i class="fa fa-cutlery"></i> <%=t :ManageYourMenus %></a></li>
        <li role="presentation"><a href="<%= pending_path %>"><i class="fa fa-cart-plus"></i> <%=t :PendingOrders %></a></li>
        <li role="presentation"><a href="<%= overview_path %>"><i class="fa fa-shopping-cart"></i> <%=t :OrderOverview %></a></li>
      </ul>
    </div>

    <div class="row">
      <p></p>
      <div class="alert alert-info " role="alert">
        <strong><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
          <%=t :MenuEditMsg %></strong>
      </div>
    </div>

<% end %>

<%= bootstrap_form_for :menu, url: chef_menu_path, method: :patch do |f| %>

    <% if @menu.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
          <%= pluralize(@menu.errors.count, "error") %> prohibited
          this menu from being saved:
          <ul>
            <% @menu.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <!--Basics-->
    <div class="page-header"><h5>Basics</h5></div>

    <div class="form-group">
      <%= f.label t(:AdminMenuName) %>
      <%= f.text_field :name, :class => 'form-control', hide_label: true %>
    </div>

    <div class="form-group">
      <%= f.label t(:AdminMenuCurrency) %>
      <%= f.select :currency, ['PEN', 'GBP', 'USD', 'EUR'], :class => 'form-control', hide_label: true %>
    </div>

    <div class="form-group">
      <%= f.label t(:AdminMenuPrice) %>
      <%= f.text_field :price, :class => 'form-control', hide_label: true %>
    </div>

    <div class="form-group">
      <%= f.label t(:AdminMenuDescription) %>
      <%= f.text_area :description, :class => 'form-control', hide_label: true %>
    </div>

    <div class="page-header"><h5>Images</h5></div>
    <div class="form-group">
      <%= f.label t(:AdminMenuPhoto1) %>
      <%= f.file_field :photo1, :class => 'form-control', hide_label: true %>
    </div>
    <div class="form-group">
      <%= f.label t(:AdminMenuPhoto2) %>
      <%= f.file_field :photo2, :class => 'form-control', hide_label: true %>
    </div>
    <div class="form-group">
      <%= f.label t(:AdminMenuPhoto3) %>
      <%= f.file_field :photo3, :class => 'form-control', hide_label: true %>
