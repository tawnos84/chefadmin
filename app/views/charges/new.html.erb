<%= form_tag charges_path, :method => :post do %>
    <article>
      <label class="amount">
        <span>Dear <%=@order.name%>,<br>
        in order to finalize your order for <%=@order.cook_date%> you have to make a payment of <%=@order.currency%> <%= @order.net_price %> using credit card.<br>

        Simply click the button below to process the payment.</span>
      </label>
    </article>

    <input name="order_id" value="<%=@order.id%>" type="hidden"/>

    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
            data-description="Your order"
            data-currency="<%=@order.currency%>"
            data-amount="<%= @order.net_price * 100%>">

    </script>

<% end %>

<p></p>
