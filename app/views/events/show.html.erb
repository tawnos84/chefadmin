<% if @event.status == 'active' %>
<div class="section">
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <div class="row">
          <div class="col-md-12">
            <div class="row">
              <div class="col-md-2"></div>
              <div class="col-md-8">
                <img src="<%=@chef.picture%>" class="img-circle img-responsive">
              </div>
              <div class="col-md-2"></div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <h1 class="text-center"><%=@chef.name%></h1>
                <p><%=@chef.biography%></p>

                <table class="table">
                  <tr><td><i class="fa fa-map-marker"></i></td> <td><%=@event.location%></td></tr>
                  <tr><td><i class="fa fa-calendar"></i></td> <td><%=@event.date%></td></tr>
                  <tr><td><i class="fa fa-money "></i></td> <td>
                    <%=@event.price%> <%=t(:PerPerson)%></td></tr>
                  <tr><td><i class="fa fa-users"></i></td> <td><%= @menu.partysize%> <%=t(:Persons)%></td></tr>
                </table>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12 text-center">
                <%= link_to t(:MenuBookNow), orders_new_path(menu_id: @menu.id, type: 'event', event_id: @event.id), class: 'btn btn-large btn-primary', style: 'color:#FFF' %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-8">
        <div class="row">
          <div class="col-md-12">
            <%= link_to t(:MenuBookNow), orders_new_path(menu_id: @menu.id, type: 'event', event_id: @event.id), class: 'btn btn-large btn-primary center-block', style: 'color:#FFF' %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <h1 class="text-center"><%=@menu.name%></h1>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="col-md-12">
              <div class="col-md-12">
                <div id="carousel-example" class="carousel slide" data-ride="carousel" data-interval="5000">
                  <div class="carousel-inner">
                    <div class="item active">
                      <img src="https://s3-sa-east-1.amazonaws.com/losibaritas/background1.jpg">
                      <div class="carousel-caption">
                        <h2>Tiradito de pato ahumado</h2>

                      </div>
                    </div>
                    <div class="item">
                      <img src="https://s3-sa-east-1.amazonaws.com/losibaritas/background2.jpg">
                      <div class="carousel-caption">
                        <h2>Salmon y curry de ají amarillo</h2>

                      </div>
                    </div>
                    <div class="item">
                      <img src="https://s3-sa-east-1.amazonaws.com/losibaritas/background3.jpg">
                      <div class="carousel-caption">
                        <h2>Chocolate, lúcuma y café</h2>

                      </div>
                    </div>
                  </div>
                  <a class="left carousel-control" href="#carousel-example" data-slide="prev"><i class="icon-prev  fa fa-angle-left"></i></a>
                  <a class="right carousel-control" href="#carousel-example" data-slide="next"><i class="icon-next fa fa-angle-right"></i></a>
                </div>
              </div>
            </div>
          </div>
        </div>


        <% @menu.courses.each do |course| %>
            <div class="row">
              <div class="col-md-12">
                <h2 class="text-center"><%=course.name%></h2>
                <p class="text-center"><%=course.description%></p>
              </div>
            </div>
        <% end %>


        <div class="row">
          <div class="col-md-12">
            <%= link_to t(:MenuBookNow), orders_new_path(menu_id: @menu.id, type: 'event', event_id: @event.id), class: 'btn btn-large btn-primary center-block', style: 'color:#FFF' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="section">
  <div class="container">
    <div class="row text-center">
      <div class="col-xs-1"></div>
      <div class="col-xs-2 text-center">
        <a href="https://instagram.com/losibaritas"><i class="fa fa-5x fa-fw fa-instagram"></i></a>
      </div>
      <div class="col-xs-2">
        <a href="https://twitter.com/losibaritas"><i class="fa fa-5x fa-fw fa-twitter"></i></a>
      </div>
      <div class="col-xs-2">
        <a href="https://www.facebook.com/losibaritas"><i class="fa fa-5x fa-fw fa-facebook"></i></a>
      </div>
      <div class="col-xs-2">
        <a href="http://losibaritas.tumblr.com/"><i class="fa fa-5x fa-fw fa-tumblr"></i></a>
      </div>
      <div class="col-xs-2 text-center">
        <a href="mailto:sibaritas.chefs@gmail.com"><i class="fa fa-5x fa-fw hub fa-envelope-o"></i></a>
      </div>
      <div class="col-xs-1"></div>
    </div>
  </div>
</div>
<% end %>

<% if @event.status == 'inactive' %>
<strong>This event is sold out. Please come back later.</strong>
<% end %>

