<!-- Page Content -->
<div class="container">

  <hr>
  <div class="row">
    <div class="col-sm-12"><%= link_to t(:back), :back, class: 'btn btn-primary' %></div>
  </div>

  <div class="row">
    <div class="col-sm-8">
      <h2><%=@chef.name%></h2>
      <p><strong><%=t :ChefLocation%> </strong> <%= @chef.location %> <strong>Age: </strong> <%= @chef.age %> <strong><%=t :ChefStyles%> </strong>
        <%= @chef.styles %>
      <p><strong><%=t :ChefBiography%> </strong> <%= @chef.biography %></p>

      <a class="btn btn-default" data-toggle="collapse" href="#collapseExample_chef_<%=@chef.id%>" aria-expanded="false" aria-controls="collapseExample_chef_<%=@chef.id%>">
        <%=t :LearnMore %> &raquo;
      </a>

      <div class="collapse" id="collapseExample_chef_<%=@chef.id%>">
          <p><strong><%=t :CulinaryTraining%> </strong> <%= @chef.culinarytraining %></p>
      </div>
    </div>
    <div class="col-sm-4 text-center">
      <% if @chef.picture %><img src="<%= @chef.picture %>" alt="" class="center-block img-circle img-thumbnail img-responsive"><% end %>
      <%=t :ChefRatings%>:
      <ul class="list-inline ratings text-center" title="Ratings">
        <li><a href="#"><span class="fa fa-star fa-lg"></span></a></li>
        <li><a href="#"><span class="fa fa-star fa-lg"></span></a></li>
        <li><a href="#"><span class="fa fa-star fa-lg"></span></a></li>
        <li><a href="#"><span class="fa fa-star fa-lg"></span></a></li>
        <li><a href="#"><span class="fa fa-star fa-lg"></span></a></li>
      </ul>
    </div>
  </div>
  <!-- /.row -->

  <hr>


  <div class="row">
    <h2><%=t :ChefTheMenus%></h2>
    <div class="container-fluid">
      <div class="row text-center">
        <h3 style="color:white;font-family:verdana;">Snap Tight Image Tiles (Responisve)</h3>
      </div>
      <div class="row">
        <% @chef.menus.each_with_index do |menu, index| %>
            <% if index < 2 then @tilesize=6 end %>
            <% if index > 1 && index < 6 then @tilesize=3 end %>
            <%= link_to chef_menu_path(menu.chef, menu) do %>
            <div class="cover-card col-sm-<%=@tilesize%>" style="background: url(<%=menu.photo1%>) no-repeat center top;background-size:cover;">
          <p><strong><%=menu.name%></strong></p>
        </div><% end %>
        <% end %>
      </div>
    </div>
  </div>

  <hr>
  <%= link_to t(:back), :back, class: 'btn btn-primary' %>
  <!-- Footer -->
  <footer>
    <div class="row">
      <div class="col-lg-12">
        <p>Copyright &copy; LoSibaritas 2015</p>
      </div>
    </div>
    <!-- /.row -->
  </footer>
</div>

