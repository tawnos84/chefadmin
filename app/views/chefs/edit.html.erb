
<% if(session[:admin]) %>
    <div class="row">
      <h3><i class="fa fa-street-view"></i> Manage your chef profile</h3>
      <ul class="nav nav-tabs">
        <li role="presentation"><a href="<%= welcome_index_path %>"><i class="fa fa-tachometer"></i> Dashboard</a></li>
        <li role="presentation"><a href="<%= edit_user_path(current_user) %>"><i class="fa fa-user"></i> Account Settings</a></li>
        <li role="presentation" class="active"><a href="<%= edit_chef_path(@chef) %>"><i class="fa fa-street-view"></i> Manage your chef profile</a></li>
        <li role="presentation"><a href="<%= chef_menus_path(@chef) %>"><i class="fa fa-cutlery"></i> Manage your menus</a></li>
        <li role="presentation"><a href="<%= pending_path %>"><i class="fa fa-cart-plus"></i> Pending orders</a></li>
        <li role="presentation"><a href="<%= overview_path %>"><i class="fa fa-shopping-cart"></i> Order overview</a></li>
      </ul>
    </div>
    <div class="row">
      <%= link_to "Preview chef", chef_path(@chef), target: 'blank' %>
    </div>
<% end %>

<%= bootstrap_form_for :chef, url: chef_path(@chef), method: :patch do |f| %>

<% if @chef.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
          <%= pluralize(@chef.errors.count, "error") %> prohibited
          this chef from being saved:
          <ul>
            <% @chef.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
<% end %>

    <!--Basics-->
    <div class="page-header"><h3>Basics</h3></div>
    <div>
      <%= f.text_field :name, :class => 'form-control' %>
    </div>

    <div>
      <%= f.email_field :email, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.text_field :age, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.select :location, ['PerÃº', 'United Kingdom', 'France'], :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.text_area :biography, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.text_area :culinarytraining, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.text_area :styles, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.file_field :picture, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.file_field :video, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.url_field :facebook, :class => 'form-control' %>
    </div>
    <!--Service-->
    <div class="page-header"><h3>Services</h3></div>

    <div class="form-group">
      <%= f.check_box :family_dinner%>
    </div>

    <div class="form-group">
      <%= f.check_box :informal_reunion%>
    </div>

    <div class="form-group">
      <%= f.check_box :last_minute%>
    </div>

    <div class="form-group">
      <%= f.check_box :teaching%>
    </div>

    <div class="form-group">
      <%= f.text_field :number_of_helpers, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.text_field :min_size, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.text_field :max_size, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <% if(!session[:admin])%><%= link_to 'Back', chefs_path, class: 'btn btn-primary' %><% end %>
      <%= f.submit class: 'btn btn-success' %>
    </div>
<% end %>

