<!DOCTYPE html>
<html>
<head>
  <title>LoSibaritas</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link rel="stylesheet" href="admin.css">
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
  <link href='//fonts.googleapis.com/css?family=Handlee' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>

</head>
<body>
<div id="wrapper">

  <!-- Navigation -->
  <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <div class="navbar-brand" style="font-family:Handlee">LoSibaritas Administration</div>
    </div>
    <!-- /.navbar-header -->


    <!-- /.navbar-top-links -->

    <div class="navbar-default sidebar" role="navigation">
      <div class="sidebar-nav navbar-collapse">
        <ul class="nav" id="side-menu">

          <li>
            <%= link_to welcome_admin_path do %>
                <i class="fa fa-dashboard fa-fw"></i> Dashboard
            <% end %>
          </li>

          <li>
            <%= link_to chefs_path do %>
                <i class="fa fa-user-plus fa-fw"></i> Manage chefs
            <% end %>
          </li>

          <li>
            <%= link_to events_path do %>
                <i class="fa fa-calendar fa-fw"></i> Manage events
            <% end %>
          </li>

          <li>
            <%= link_to orders_path do %>
                <i class="fa fa-bar-chart fa-fw"></i> Manage orders
            <% end %>
          </li>
        </ul>
      </div>
      <!-- /.sidebar-collapse -->
    </div>
    <!-- /.navbar-static-side -->
  </nav>

  <!-- Page Content -->
  <div id="page-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <%=  yield %>
        </div>
        <!-- /.col-lg-12 -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </div>
  <!-- /#page-wrapper -->

</div>
<!-- /#wrapper -->

</body>
</html>