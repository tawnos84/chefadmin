<body>

<nav class="navbar navbar-default" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <%= link_to "LoSibaritas", searches_ask_path, class: "navbar-brand", style: "font-family: 'Handlee'" %>
    </div>
    <!--Locale switch-->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <li class="hidden-xs hidden-sm"><a href="">Cont√°ctanos</a></li>
