<!-- app/views/layouts/application.html.erb -->

<!DOCTYPE html>
<html>
<head>
  <title>LoSibaritas</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
  <link href='//fonts.googleapis.com/css?family=Handlee' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="MenuTheme.css">
  <link rel="stylesheet" href="kai.css">

</head>
<body>

<nav class="navbar navbar-default" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <%= link_to "LoSibaritas", searches_ask_path, class: "navbar-brand", style: "font-family: 'Handlee'" %>
    </div>
    <!--Locale switch-->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <li class="hidden-xs hidden-sm"><a href="">Cont√°ctanos</a></li>
        <li><a href=""><div class="fa fa-phone"></div> 999005609</a></li>
        <li><a href="mailto:info@losibaritas.com"><div class="fa fa-envelope-o"></div> info@losibaritas.com</a></li>
        <li><%=link_to 'English', params.merge( locale: "en" )%></li>
        <li><%=link_to 'Castellano', params.merge( locale: "es" )%></li>

      </ul>
    </div>
  </div>
</nav>


<div id="main-container" class="container">

  <div class="row">
    <div class="col-xs-12">
      <% flash.each do |message_type, message| %>
          <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>

      <%= yield %>
    </div>
  </div>
</div>

</body>
<footer class="section section-primary">
  <div class="container">
    <div class="row">
      <div class="col-sm-6">
        <h3 style="font-family:Handlee">LoSibaritas.com</h3>
        <p>2015, LoSibaritas.com Ltd</p>
      </div>
    </div>
  </div>
</footer>
<%= render 'layouts/footerga' %>
</html>
