      </ul>
    </div>
  </div>
</nav>


<div id="main-container" class="container">

  <div class="row">
    <div class="col-xs-12">
      <% flash.each do |message_type, message| %>
          <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>

      <%= yield %>
    </div>
  </div>
</div>

</body>
<footer class="section section-primary">
  <div class="container">
    <div class="row">
      <div class="col-sm-6">
        <h3 style="font-family:Handlee">LoSibaritas.com</h3>
