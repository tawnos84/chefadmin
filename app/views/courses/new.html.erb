<h1>Add new course</h1>

<%= bootstrap_form_for :course, url: chef_menu_courses_path do |f| %>

    <% if @course.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
          <%= pluralize(@course.errors.count, "error") %> prohibited
          this chef from being saved:
          <ul>
            <% @course.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.text_field :course_type, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.text_field :position, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.text_area :description, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= link_to 'Back', chef_menu_courses_path, class: "btn btn-primary" %>
      <%= f.submit class: "btn btn-success" %>
    </div>
<% end %>
